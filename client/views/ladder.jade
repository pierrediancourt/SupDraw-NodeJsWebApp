//- ladder.jade
extends ./layout

block title
	title Ladder page

block header
	h1 Hall of fame
	h2 Challenge your friends and beat them

block content
	<br>
	table.pure-table
		thead
			tr
				th #
				th Name
		tbody
			each val, index in players
				if index %2 == 1
					tr.pure-table-odd
						td #{index +1}
						td #{val}
				else 
					tr
						td #{index +1}
						td #{val}